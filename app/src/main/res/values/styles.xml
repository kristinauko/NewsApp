<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- CardView style. -->
    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- Section TextView style. -->
    <style name="SectionTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginBigger</item>
        <item name="android:layout_marginTop">@dimen/marginSmaller</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <!-- Title TextView style. -->
    <style name="TitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginBigger</item>
        <item name="android:layout_marginRight">@dimen/marginBigger</item>
        <item name="android:layout_marginTop">@dimen/marginSmaller</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- View style. -->
    <style name="ViewTextView">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">@dimen/marginBigger</item>
        <item name="android:layout_marginTop">@dimen/marginBigger</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <!-- Author and Date layout style. -->
    <style name="AuthorDateLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginBigger</item>
        <item name="android:layout_marginLeft">@dimen/marginBigger</item>
        <item name="android:layout_marginRight">@dimen/marginBigger</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- Author TextView style. -->
    <style name="AuthorTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/textSizeDateAuthor</item>
    </style>
    <!-- Date TextView style. -->
    <style name="DateTextView">
        <item name="android:id">@+id/time</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
